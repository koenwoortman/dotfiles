[url "git@git.m2mobi.com:"]
	insteadOf = "m2:"

[core]
	excludesfile = /home/koen/dotfiles/git/ignore

[merge]
    tool = vimdiff

[alias]
    amend = commit --amend
    cm = commit -m
    df = diff
    graph = log --all --decorate --oneline --graph
    pop = stash pop
    pl = pull
    rb = rebase
